<p id="notice"><%= notice %></p>

<h1>Pets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Birthday</th>
      <th>Race</th>
      <th>Pet type</th>
      <th>Medical Cards</th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.birthday %></td>
        <td><%= pet.race %></td>
        <td><%= pet.pet_type %></td>
        <td>
          <%=link_to 'Create Medical Card', new_medical_card_path(pet.id)%>
          <%=link_to 'List of Medical Cards', medical_cards_path(pet.id) if pet.medical_cards.count > 0%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pet', new_pet_path %>
